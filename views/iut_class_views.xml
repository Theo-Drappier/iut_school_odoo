<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_form_iut_it_brand">
            <field name="name">iut.class.form</field>
            <field name="model">iut.class</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="warrantly_delay_month" />
                            <field name="support_phone" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_search_iut_it_brand">
            <field name="name">iut.class.search</field>
            <field name="model">iut.class</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_tree_iut_it_brand">
            <field name="name">iut.class.list</field>
            <field name="model">iut.class</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="support_phone"/>
                </tree>
            </field>
        </record>

        <record id="action_iut_brand" model="ir.actions.act_window">
            <field name="name">Class</field>
            <field name="res_model">iut.class</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>